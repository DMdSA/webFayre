@model IEnumerable<WebFayre.Models.Stand>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponibilidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Morada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StandPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feira)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StandTipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponibilidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Morada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StandPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Feira.IdFeira)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StandTipo.Id)
            </td>
            <td>
                    <a asp-action="Enter" asp-route-id="@item.IdStand">ENTRAR</a> |
                    <a asp-action="Edit" asp-route-id="@item.IdStand">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdStand">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdStand" asp-route-feiraId="@item.FeiraId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
