@model WebFayre.Models.Feira

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Feira</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdFeira" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" maxlength="75"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" maxlength="250"/>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadeClientes" class="control-label"></label>
                <input asp-for="CapacidadeClientes" class="form-control" min="0"/>
                <span asp-validation-for="CapacidadeClientes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NStands" class="control-label"></label>
                <input asp-for="NStands" class="form-control" min="0"/>
                <span asp-validation-for="NStands" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" maxlength="50" pattern="^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" pattern="(\+\d{2,3} ?)?(\d{3} ?){3}"/>
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Morada" class="control-label"></label>
                <input asp-for="Morada" class="form-control" maxlength="80"/>
                <span asp-validation-for="Morada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeiraPath" class="control-label"></label>
                <input asp-for="FeiraPath" class="form-control" maxlength="150"/>
                <span asp-validation-for="FeiraPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoBase" class="control-label"></label>
                <input asp-for="PrecoBase" class="form-control" min="0.0"/>
                <span asp-validation-for="PrecoBase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeiraCategoria1s" class="control-label"></label>
                @Html.DropDownListFor(x => x.FeiraCategoria1s, ((MultiSelectList)ViewBag.Categorias),"Select",new {multiple = "multiple"})
            </div>
            <div class="form-group">
                <label asp-for="Patrocinadors" class="control-label"></label>
                @Html.DropDownListFor(x => x.Patrocinadors, ((MultiSelectList)ViewBag.Patrocinadores),"Select",new {multiple = "multiple"})
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

