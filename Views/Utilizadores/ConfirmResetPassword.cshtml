@model WebFayre.Models.ConfirmResetPasswordForm

<h4>Change your password</h4>

@if (ViewBag.passwordsMatch != null)
{
    <h4>@ViewBag.passwordsMatch</h4>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Utilizadores" asp-action="ConfirmResetPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodeBase64Url" />
            <div class="form-group">
                
                <label asp-for="newPassword" class="control-label"></label>
                <input asp-for="newPassword" class="form-control" />
                <span asp-validation-for="newPassword" class="text-danger"></span>
                
                <label asp-for="newPasswordConfirmation" class="control-label"></label>
                <input asp-for="newPasswordConfirmation" class="form-control" />
                <span asp-validation-for="newPasswordConfirmation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Home</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}